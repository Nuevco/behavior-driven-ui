{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/core/*": ["./core/*"],
      "@/drivers/*": ["./drivers/*"],
      "@/runners/*": ["./runners/*"],
      "@/presets/*": ["./presets/*"],
      "@/cli/*": ["./cli/*"]
    }
  },
  "include": [
    "src/**/*",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}