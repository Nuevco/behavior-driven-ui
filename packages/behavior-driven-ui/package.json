{
  "name": "behavior-driven-ui",
  "version": "0.1.0",
  "description": "Behavior-driven UI testing framework with cross-framework validation",
  "keywords": [
    "testing",
    "bdd",
    "ui-testing",
    "playwright",
    "cucumber",
    "behavior-driven",
    "e2e",
    "cross-framework"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./cucumber": {
      "types": "./dist/cucumber/index.d.ts",
      "import": "./dist/cucumber/index.mjs",
      "require": "./dist/cucumber/index.js"
    }
  },
  "bin": {
    "bdui": "./bin.js"
  },
  "files": [
    "bin.js",
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run lint && pnpm run type:check && tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type:check": "tsc --noEmit",
    "test": "vitest run",
    "test:verbose": "vitest run --reporter verbose",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "@cucumber/cucumber": "^10.0.0",
    "@cucumber/messages": "^24.1.0",
    "@nuevco/free-paths": "workspace:^",
    "fast-glob": "^3.3.3",
    "commander": "^11.0.0",
    "tsx": "^4.19.1",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "publishConfig": {
    "access": "public"
  }
}
