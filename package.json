{
  "name": "behavior-driven-ui-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "description": "Behavior-driven UI testing framework with cross-framework validation",
  "keywords": [
    "testing",
    "bdd",
    "ui-testing",
    "playwright",
    "cucumber",
    "monorepo"
  ],
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type:check": "tsc --noEmit",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "quality:check": "pnpm run lint && pnpm run type:check",
    "turbo:lint": "turbo run lint",
    "turbo:lint:fix": "turbo run lint:fix",
    "turbo:type:check": "turbo run type:check",
    "turbo:quality:check": "turbo run quality:check",
    "turbo:format:check": "turbo run format:check",
    "turbo:format:fix": "turbo run format:fix",
    "pack:tarballs": "pnpm -r --filter ./packages... pack --pack-destination ./dist/tarballs",
    "e2e:react": "pnpm --filter react-app test",
    "e2e:next": "pnpm --filter next-app test",
    "e2e:qwik": "pnpm --filter qwik-app test",
    "e2e:all": "pnpm e2e:react && pnpm e2e:next && pnpm e2e:qwik",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.22.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.6.2",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}