{
  "name": "behavior-driven-ui-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "description": "Behavior-driven UI testing framework with cross-framework validation",
  "keywords": [
    "testing",
    "bdd",
    "ui-testing",
    "playwright",
    "cucumber",
    "monorepo"
  ],
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:force": "turbo run build --force",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:force": "turbo run test --force",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type:check": "turbo run type:check",
    "format:check": "turbo run format:check",
    "format:fix": "turbo run format:fix",
    "quality:check": "turbo run quality:check",
    "clean": "turbo run clean && rm -rf node_modules",
    "validate:config": "cd tools/config-validation && npm run validate",
    "pack:tarballs": "pnpm -r --filter ./packages... pack --pack-destination ./dist/tarballs",
    "bdui:shell": "pnpm --filter behavior-driven-ui exec -- bash",
    "bdui:build": "pnpm --filter behavior-driven-ui build",
    "bdui:dev": "pnpm --filter behavior-driven-ui dev",
    "bdui:lint": "pnpm --filter behavior-driven-ui lint",
    "bdui:lint:fix": "pnpm --filter behavior-driven-ui lint:fix",
    "bdui:type:check": "pnpm --filter behavior-driven-ui type:check",
    "bdui:test": "pnpm --filter behavior-driven-ui test",
    "bdui:test:verbose": "pnpm --filter behavior-driven-ui test:verbose",
    "bdui:clean": "pnpm --filter behavior-driven-ui clean",
    "free-paths:build": "pnpm --filter @nuevco/free-paths build",
    "free-paths:test": "pnpm --filter @nuevco/free-paths test",
    "free-paths:lint": "pnpm --filter @nuevco/free-paths lint",
    "esm-app:build": "pnpm --filter esm-app build",
    "esm-app:test": "pnpm --filter esm-app test",
    "cjs-app:build": "pnpm --filter cjs-app build",
    "cjs-app:test": "pnpm --filter cjs-app test",
    "test:apps": "pnpm esm-app:test && pnpm cjs-app:test",
    "packages:build": "pnpm bdui:build && pnpm free-paths:build",
    "packages:test": "turbo run test --filter='./packages/*'",
    "packages:lint": "turbo run lint --filter='./packages/*'",
    "packages:clean": "turbo run clean --filter='./packages/*'",
    "packages:pack:dry": "rm -rf dist/tarballs && mkdir -p dist/tarballs && pnpm --filter @nuevco/free-paths exec pnpm pack --pack-destination ../../dist/tarballs && pnpm --filter behavior-driven-ui exec pnpm pack --pack-destination ../../dist/tarballs"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.22.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "prettier": "^3.6.2",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}
