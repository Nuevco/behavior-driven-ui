{
  "name": "config-validation",
  "version": "1.0.0",
  "private": true,
  "description": "Validation tests for ESLint and TypeScript configuration",
  "type": "module",
  "scripts": {
    "validate": "node validate.js",
    "lint:expect-errors": "../../node_modules/.bin/eslint src/lint-tests.ts src/type-tests.ts --no-ignore --format json --output-file lint-results.json || true",
    "type:expect-errors": "tsc --noEmit src/type-tests.ts > type-results.txt 2>&1 || true",
    "clean": "rm -f lint-results.json type-results.txt"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  }
}